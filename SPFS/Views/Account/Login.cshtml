@model SPFS.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}
<div class="col-md-12 col-sm-12">
    <h2>@ViewBag.Title</h2>
    <hr />
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("_CustomValidationSummary")
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2 col-sm-2" })
                <div class="col-md-4 col-sm-4">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2 col-sm-2" })
                    <div class="col-md-4 col-sm-4">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-2 col-sm-offset-2 col-sm-2">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
        }
    </section>
</div>